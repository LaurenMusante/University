@model University.Models.Course

<h2>Edit</h2>

<h4>Edit this course: @Html.DisplayFor(model => model.Name) - @Html.DisplayFor(model => model.CourseNum)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.CourseNum)
    @Html.EditorFor(model => model.CourseNum)

    @Html.LabelFor(model => model.StartTime)
    @Html.EditorFor(model => model.StartTime)

    <input type="submit" value="Save" class="btn btn-success"/>
}
<p>@Html.ActionLink("Back to courses", "Index")</p>