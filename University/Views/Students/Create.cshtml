@using System;
@model University.Models.Student

<h4>Add a new student</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.Label("International Student?")
    @Html.CheckBox("International", false)<br>
        
    @Html.LabelFor(model => model.EnrollmentDate)
    @Html.EditorFor(model => model.EnrollmentDate, new { @type = "date" })

    @Html.LabelFor(model => model.Level)
    @Html.TextBoxFor(model => model.Level)<br>

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Add new student" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all students", "Index")</p>